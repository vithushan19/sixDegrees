<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_panel"
    android:orientation="vertical">

        <com.vithushan.sixdegrees.view.CirclesLogo
            android:id="@+id/circles"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <RelativeLayout
            android:id="@+id/transparent_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80FFFFFF"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:paddingBottom="25dp"
            android:visibility="visible">

            <Button
                android:id="@+id/button_movie_game"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/movie_game"/>

            <Button
                android:id="@+id/music_game_button"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/music_game"/>


            <Button
                android:id="@+id/open_menu_button"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/choose"/>

        </RelativeLayout>

</FrameLayout>

